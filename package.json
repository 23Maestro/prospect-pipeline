{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "prospect-pipeline",
  "title": "Prospect Pipeline",
  "description": "Student-athlete video editing workflow automation",
  "type": "module",
  "icon": "prospect-pipeline.png",
  "author": "jerami_singleton",
  "categories": [
    "Productivity",
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "assign-videoteam-inbox",
      "title": "Assign Video Team Inbox",
      "description": "Assign video team inbox threads to yourself",
      "mode": "view",
      "icon": "assign-video-team-inbox.png"
    },
    {
      "name": "read-videoteam-inbox",
      "title": "Read Video Team Inbox",
      "description": "Read video team inbox messages",
      "mode": "view",
      "icon": "read-video-team-inbox.png"
    },
    {
      "name": "email-student-athletes",
      "title": "Email Student Athletes",
      "description": "Send emails to student athletes",
      "mode": "view",
      "icon": "student-athlete-video-edits-2-resized.png"
    },
    {
      "name": "video-updates",
      "title": "Video Updates",
      "description": "Update video information for athletes",
      "mode": "view",
      "icon": "video-updates.png"
    },
    {
      "name": "video-progress",
      "title": "Video Progress",
      "description": "View and manage video editing progress for active tasks",
      "mode": "view",
      "icon": "active-video-tasks.png"
    }
  ],
  "tools": [
    {
      "name": "generate-content",
      "title": "Generate Content",
      "description": "Generate athlete content naming (YouTube, Dropbox, approved titles)",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.102.7",
    "@raycast/utils": "^2.2.1",
    "cheerio": "^1.0.0",
    "date-fns": "^4.1.0",
    "node-fetch": "^3.3.0",
    "pickleparser": "^0.2.1",
    "python-shell": "^5.0.0",
    "sql.js": "^1.10.3"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.1.1",
    "@types/node": "^20.11.0",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.37.0",
    "globals": "^16.5.0",
    "typescript": "^4.9.5"
  },
  "preferences": [
    {
      "name": "dropboxToken",
      "title": "Dropbox API Token",
      "description": "Your Dropbox API token for file request creation",
      "type": "password",
      "required": false
    },
    {
      "name": "scoutApiKey",
      "title": "Scout API Key",
      "description": "Used for video stage/status updates (required)",
      "type": "password",
      "required": false
    }
  ],
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "lint": "eslint . --ext .ts,.tsx"
  }
}
